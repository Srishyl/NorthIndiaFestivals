<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Festival Banner Image (Dynamic Image Loaded Here) -->
        <ImageView
            android:id="@+id/festivalImage"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"
            android:contentDescription="Festival Banner"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true" />

        <!-- Festival Detail Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:elevation="8dp">

            <!-- Festival Title -->
            <TextView
                android:id="@+id/festivalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Festival Name"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:paddingBottom="12dp" />

            <!-- Orange Divider Line -->
            <View
                android:layout_width="70dp"
                android:layout_height="3dp"
                android:background="#FF9800"
                android:layout_marginBottom="16dp" />

            <!-- Festival Description -->
            <TextView
                android:id="@+id/festivalDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Festival description appears here..."
                android:textSize="17sp"
                android:textColor="#4A4A4A"
                android:lineSpacingExtra="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
